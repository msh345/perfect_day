
<div class="itineraries">

    <ul>
      <% itinerary.itinerary_spots.each do |itinerary_spot| %>
       <li><%= Spot.find(itinerary_spot.spot_id).name %></li>
      <% end %>
    </ul>

  
<div class="row map_holder">
  <div class="itineraries">

    <% @distances.try(:each) do |distance, itinerary| %>
      <a href="/itineraries/<%= itinerary.id %>/spots/<%= itinerary.itinerary_spots.first.id %>"><%= itinerary.name %></a><br>
      Starting point is <%= distance.round(2) %> miles away

      <% waypoints = [] %>

      <% itinerary.spots.each do |spot| %>
        <% waypoints << [spot.latitude.to_f, spot.longitude.to_f] %>
      <% end %>


      <div class="map-canvas" data-latlong='<%= waypoints %>' style="width:300px;height:250px;margin:0 auto;display:block;"></div>

    <% end %>

  </div>
</div>
