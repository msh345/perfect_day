    <% if current_user %>
    <!-- this will be on the options popout on top nav -->
      <div class="header-nav">



     <% if current_user.facebook_image? %>
        image_tag("http://graph.facebook.com/#{current_user.facebook_id}/picture")
     <% else %>
         image_tag @user.photo.url(:thumb)
      <% end %>




        <%= link_to "Sign out", signout_path(current_user), method: :destroy %>
      </div>
    <% end %>
<br>
    <%= yield %>
<br><br><br>
    <% if current_user %>
      <div class='footer-nav'>
        <%= link_to "home", user_path(current_user)%>
        <%= link_to "browse", browse_path %>
        <%= link_to "new", new_path %>
        <%= link_to "favorites", favorite_path %>
        <%= link_to "search" %>
      </div>
    <% end %>
  <script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCtt4-lM1MBQ1Utw1m7aXtyLh2DZZLbRrM&sensor=false&libraries=places"></script>
